<mvc:View 
    controllerName="project1.controller.View1"
    xmlns:l="sap.ui.layout"
  xmlns:u="sap.ui.unified"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  class="viewPadding">
 
  <VBox class="sapUiSmallMargin">
   
    <!-- File Uploader -->
    <u:FileUploader
      id="fileUploader"
      name="myFileUpload"
      fileType="xlsx"
      uploadOnChange="false"
      tooltip="Upload your file to the local server"
      change="handleFileChange" />
   
    <Button text="Upload File" press="handleUploadPress" />
 
    <!-- Table for displaying Excel Data -->
    <Table id="excelTable" visible="false" inset="false" items="{
      path: '/dataArray'
    }">
      <columns>
        <Column><Text text="ID" /></Column>
        <Column><Text text="Name" /></Column>
        
        <Column><Text text="Email" /></Column>
        <Column><Text text="Department" /></Column>
        <Column><Text text="Year" /></Column>
        <Column><Text text="Contact" /></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Text text="{ID}" />
            <Text text="{Name}" />
            
            <Text text="{Email}" />
            <Text text="{Department}" />
            <Text text="{Year}" />
            <Text text="{Contact}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
 
  </VBox>
</mvc:View>